{% block fos_user_content %}
<h4>Register</h4>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

    <div class="controls">
        {{ form_widget(form.username, { 'attr': {'placeholder': 'Username'} }) }}
    </div>
    <div class="controls">
        {{ form_widget(form.email, { 'attr': {'placeholder': 'E-mail'} }) }}
    </div>
    <div class="controls">
        {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Password'} }) }}
    </div>
    <div class="controls">
        {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Verify'} }) }}
    </div>
    {{ form_rest(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn" />
    </div>
</form>
{% endblock fos_user_content %}
